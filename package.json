{
  "name": "pm-run-script",
  "version": "0.0.0-semantically-released",
  "description": "CLI to interactively select and run package scripts",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "prepack": "npm run build",
    "build": "npm run compile",
    "prebuild": "npm run ci && rimraf ./bin",
    "ci": "npm run check-style && npm run check-build",
    "check-style": "npm run format:check && npm run lint",
    "check-build": "npm run compile -- --noEmit",
    "format": "prettier --write *.{js,cjs,mjs,ts,cts,mts} src/**/*.ts",
    "format:check": "prettier --check *.{js,cjs,mjs,ts,cts,mts} src/**/*.ts",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "npm run lint -- --fix",
    "style": "npm run format && npm run lint:fix",
    "compile": "tsc -p tsconfig.json",
    "prepare": "husky"
  },
  "files": [
    "bin"
  ],
  "bin": {
    "pm-run": "bin/index.js",
    "pmrun": "bin/index.js"
  },
  "keywords": [
    "package",
    "script",
    "run",
    "interactive"
  ],
  "author": "Lex Borisoff <lex@boriosoff.dev>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LexBorisoff/pm-run-script.git"
  },
  "homepage": "https://github.com/LexBorisoff/pm-run-script/tree/main#readme",
  "bugs": {
    "url": "https://github.com/LexBorisoff/pm-run-script/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@lexjs/eslint-plugin": "^1.1.2",
    "@types/node": "^22.10.6",
    "@types/yargs": "^17.0.33",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@lexjs/prompts": "^1.1.0",
    "chalk": "^4.1.2",
    "type-fest": "^4.32.0",
    "yargs": "^17.7.2"
  }
}
